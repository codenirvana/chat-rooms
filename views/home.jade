extends layout

block content
    
    div.mdl-grid
        div.mdl-cell.mdl-cell--4-col
            table#rooms.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp
                thead
                    tr
                        th Rooms
                tbody
                            
        div.mdl-cell.mdl-cell--8-col
            h3#roomName
            textarea#messages(rows=15)
            br
            a#delete.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored(href='#') Delete All Messages
            h3 Post A  Message
            textarea#message(rows=2)
            br
            a#post.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored(href='#') Post
            
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.10.0/jquery.min.js', type='text/javascript')
    script(src='/home.js', type='text/javascript')

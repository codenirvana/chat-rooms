extends layout

block content
    h1 Create Room
    
    form.add-room(method='post')
        .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
            input.mdl-textfield__input(type='text', name='name')
            label.mdl-textfield__label(for='name') Enter Chat Room Name
        br
        button.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect.mdl-button--colored(type='submit') Create New Chat Room
        a.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect(href='/admin/rooms') Cancel
